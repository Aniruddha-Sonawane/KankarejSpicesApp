<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Screen Theme -->
    <style name="Theme.KankarejSpices.Splash" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- FIX: use a drawable logo, NOT mipmap launcher icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

        <!-- Optional: remove animation scaling for maximum sharpness -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Theme applied after splash -->
        <item name="postSplashScreenTheme">@style/Theme.KankarejSpices</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.KankarejSpices" parent="Theme.Material3.DayNight.NoActionBar" />

</resources>
